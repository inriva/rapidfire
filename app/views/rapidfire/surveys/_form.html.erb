

<%= form_for survey do |f| %>
  <%- if survey.errors.any? %>
    <ul>
      <%- survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>




    <div class="panel panel-default">
      <div class="panel-heading"><h3><%= survey.new_record? ? t('surveys.new_survey') : t('surveys.edit_survey') %></h3></div>
      <div class="panel-body">
        <div class="form-group">
          <label><%= f.label :name %></label>
          <%= f.text_field :name %>
        </div>
      </div>
    </div>


    <%= f.submit t('common.save'), :class => 'btn btn-primary' %>
<% end %>

<ul class="nav nav-pills">
  <li><%= link_to t('common.back'), surveys_path %></li>
</ul>