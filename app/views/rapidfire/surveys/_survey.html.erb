<tr id= "survey_<%= survey.id %>">
  <td>
    <% if can_administer? %>
      <%= link_to survey.name, survey_questions_path(survey) %>
    <% else %>
      <%= survey.name %>
    <% end %>
  </td>
  <td>
    <div class="btn-group">
      <% if can_administer? %>
        <%= link_to raw('<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>&nbsp;') + t('surveys.edit_questions'), survey_questions_path(survey), :class => 'button button--default' %>
        <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;') + t('common.edit'), edit_survey_path(survey), :class => 'button button--default' %>
        <%= link_to raw('<span class="glyphicon glyphicon-signal" aria-hidden="true"></span>&nbsp;') + t('surveys.results'), [:results, survey], :class => 'button button--default' %>
        <li><%= link_to "Copy", surveys_path(copy_survey_id: survey), method: :post %></li>
        <% if survey.active? %>
          <li><%= link_to "De-activate", survey_path(survey, survey: { active: 0 }), method: :patch %></li>
        <% else %>
          <li><%= link_to "Activate", survey_path(survey, survey: { active: 1 }), method: :patch %></li>
        <% end %>
      <% end %>
        <%= link_to raw('<span class="glyphicon glyphicon-check" aria-hidden="true"></span>&nbsp;') + t('surveys.answer_questions'), new_survey_attempt_path(survey), :class => 'button button--default'  %>
      <% if can_administer? %>
          <%= link_to raw('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;') + t('common.delete'), survey, method: :delete, confirm: t('common.are_you_sure'), :class => 'button button--default' %>
      <% end %>
    </div>
  </td>
</tr>