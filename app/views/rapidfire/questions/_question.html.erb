<tr id="question_<%= question.id %>">
  <td><%= question.position.to_s %></td>
  <td><%= question.question_text %></td>
  <td>
    <div class="btn-group">
      <%= link_to [:edit, question.survey, question], {:class => 'button button--default'} do %>
          <span class="glyphicon glyphicon-pencil"></span>&nbsp;
          <%= t('common.edit') %>
      <% end %>
      <%= link_to [question.survey, question], method: :delete, confirm: t('common.are_you_sure'), :class => 'btn btn-danger' do %>
          <span class="glyphicon glyphicon-trash"></span>&nbsp;
          <%= t('common.delete') %>
      <% end %>
    </div>
  </td>
</tr>