<tr id="question_<%= question.id %>">
  <td><%= question.question_text %></td>
  <td>
    <div class="btn-group">
      <%= link_to t('common.edit'), [:edit, question.survey, question], :class => 'btn btn-primary' %>
      <%= link_to t('common.delete'), [question.survey, question], method: :delete, confirm: t('common.are_you_sure'), :class => 'btn btn-danger' %>
    </div>
  </td>
</tr>
